<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout.cshtml";
}

<div class="formus">
    <form action="Url.Action('Comenzar', 'Home')">
        <h5>Dificultad</h5>
        @{
            for(int i = 0; i < ViewBag.dificultades.Count(); i++){
                <p>@ViewBag.dificultades</p>
                <input type="radio">
            }
        }
        <input type="submit" required>
    </form>
    <form action="Url.Action('Comenzar', 'Home')">
        <h5>Categorias</h5>
       @{
            for(int i = 0; i < ViewBag.categorias.Count(); i++){
                <p>@ViewBag.categorias</p>
                <input type="radio">
            }
        }
        <input type="submit" required>
    </form>
    <form action="Url.Action('Comenzar', 'Home')">
        <p>Nombre:</p>
        <input type="text">
    </form>
    <a href='Url.Action("Comenzar", "Home")'><button type="button" class="btn btn-secondary">Jugar</button></a>
</div>